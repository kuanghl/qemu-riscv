{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build", //调用make编译C代码文件
            "type": "shell",
            
            "command": "export PATH=$(pwd)/install/rv32i/bin:${PATH} && cd user/mini_verify && make", //执行make命令
            // "command": "export PATH=$(pwd)/install/rv32i/bin:${PATH} && cd user/hello_world && make", //执行make命令

            // "command": "export PATH=$(pwd)/install/rv32i/bin:${PATH} && cd mini_verify && make", //执行make命令
            // // "command": "export PATH=$(pwd)/install/rv32i/bin:${PATH} && cd hello_world && make", //执行make命令
            
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Run RISCV-QEMU",  //调用QEMU以用户模式执行RISC-V平台的程序
            "type": "shell",
            "isBackground": true,       //让QEMU在后台运行
            
            //-g 1234表示打开1234端口等待GDB的连接，进行调试，./*.elf表示
            //编译好的RISC-V可执行程序，即main.elf
            "command": "echo Starting RISCV-QEMU && export PATH=$(pwd)/install/rv32i/bin:${PATH} && qemu-riscv32 -g 1234 ./user/mini_verify/*.elf",                                                                                                                               
            // "command": "echo Starting RISCV-QEMU && export PATH=$(pwd)/install/rv32i/bin:${PATH} && qemu-riscv32 -g 1234 ./user/hello_world/*.elf", 

            // "command": "echo Starting RISCV-QEMU && export PATH=$(pwd)/install/rv32i/bin:${PATH} && qemu-riscv32 -g 1234 ./mini_verify/*.elf",                                                                                                                               
            // // "command": "echo Starting RISCV-QEMU && export PATH=$(pwd)/install/rv32i/bin:${PATH} && qemu-riscv32 -g 1234 ./hello_world/*.elf",
            
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(Starting RISCV-QEMU)",
                    "line": 1,
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(Starting RISCV-QEMU)",
                    "endsPattern": "^(Starting RISCV-QEMU)"
                }
            }
            
        },
        {
            "label": "Build and run",   //编译并运行
            "dependsOrder":"sequence",  //任务的依赖顺序
            "dependsOn": [
                "Build",                //先执行编译
                "Run RISCV-QEMU",       //然后调用QEMU运行
            ]
        }
    ]
}